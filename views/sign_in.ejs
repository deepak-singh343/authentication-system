<span id="registration">Login</span>
<div>
  <form id="register" class="form-style" action="/users/createSession" method="POST">
    <div class="form-group row">
      <div class="col">
        <input type="email" name="email" class="form-control" placeholder="Your Email" id="email" required />
        <!--Email or phone of registering user-->
      </div>
    </div>
    <div class="form-group row">
      <div class="col">
        <input type="password" name="password" class="form-control" placeholder="Password" id="password" required />
        <!--password of registering user-->
      </div>
    </div>
    <input type="submit" value="Sign In" id="submit" />
  </form>
</div>

<div id="forgot-password-link">
  <a href="/users/forgot-password">Forgot Password?</a>
</div>